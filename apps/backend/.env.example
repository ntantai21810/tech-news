# ======================================
# Backend Environment Variables
# ======================================
# Copy this file to .env and fill in values

# Database (Required)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tech_intelligence?schema=public"

# Redis (Required for job queues)
REDIS_HOST="localhost"
REDIS_PORT=6379

# Application
NODE_ENV="development"
BACKEND_PORT=3001
BLOG_URL="http://localhost:3000"

# Authentication
JWT_SECRET="change-this-in-production"

# ======================================
# LLM Providers (at least one required)
# ======================================
LLM_DEFAULT_PROVIDER="claude"  # claude, openai, gemini, glm, ollama

# Anthropic Claude
ANTHROPIC_API_KEY=""

# OpenAI
OPENAI_API_KEY=""

# Google Gemini
GOOGLE_AI_API_KEY=""

# ChatGLM (Zhipu AI)
GLM_API_KEY=""

# Ollama (local)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama3:8b"

# ======================================
# Data Collection APIs (optional)
# ======================================
GITHUB_TOKEN=""
REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""
REDDIT_USER_AGENT="TechIntelligence/1.0"
